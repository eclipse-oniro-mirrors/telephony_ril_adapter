import("//build/test.gni")
import("//drivers/adapter/uhdf2/uhdf.gni")

RIL_ADAPTER = "//base/telephony/"

ohos_unittest("tel_ril_adapter_gtest") {
  install_enable = true
  subsystem_name = "telephony"
  part_name = "ril_adapter"
  test_module = "tel_ril_adapter_gtest"
  module_out_path = part_name + "/" + test_module

  sources = [
    "ril_adapter_unit_test.cpp",
    "ril_manager_test.cpp",
    "ril_radio_indication_test.cpp",
    "ril_radio_response_test.cpp",
  ]

  include_dirs = [
    "$RIL_ADAPTER/ril_adapter/include",
    "$RIL_ADAPTER/ril_adapter/test/unittest/include",
    "//drivers/adapter/uhdf2/include/hdi",
    "$RIL_ADAPTER/ril_adapter/interfaces/innerkits",
    "//third_party/json/include",
    "//base/telephony/ril_adapter/include",
    "//utils/native/base/include",
    "include",
  ]
  deps = [
    "$RIL_ADAPTER/ril_adapter/hril:hril",
    "$RIL_ADAPTER/ril_adapter/hril_hdf:hril_hdf",
    "$RIL_ADAPTER/ril_adapter/vendor:ril_vendor",
    "$hdf_uhdf_path/hdi:libhdi",
    "//base/telephony/core_service/common:libtelephony_common",
    "//drivers/adapter/uhdf2/host:libhdf_host",
    "//drivers/adapter/uhdf2/ipc:libhdf_ipc_adapter",
    "//drivers/adapter/uhdf2/osal:libhdf_utils",
    "//third_party/googletest:gtest_main",
  ]

  external_deps = [
    "appexecfwk_standard:libeventhandler",
    "ipc:ipc_core",
  ]

  public_deps = [ "//utils/native/base:utils" ]

  defines = [ "TELEPHONY_LOG_TAG = \"RilAdapterGtest\"" ]

  if (is_standard_system) {
    external_deps += [ "hiviewdfx_hilog_native:libhilog" ]
  } else {
    external_deps += [ "hilog:libhilog" ]
  }
}

group("unittest") {
  testonly = true
  deps = [ ":tel_ril_adapter_gtest" ]
}
